# IPPAN Node Configuration
# Copy this file to ippan.env and modify as needed

# Node Identity
NODE_ID=ippan_node_001
VALIDATOR_ID=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Network Configuration
RPC_HOST=0.0.0.0
RPC_PORT=8080
P2P_HOST=0.0.0.0
P2P_PORT=9000

# Storage Configuration
DATA_DIR=/var/lib/ippan
DB_PATH=/var/lib/ippan/db

# Consensus Configuration
SLOT_DURATION_MS=1000
MAX_TRANSACTIONS_PER_BLOCK=1000
BLOCK_REWARD=10

# P2P Configuration
BOOTSTRAP_NODES=
MAX_PEERS=50
BLOCK_TOPIC=ippan-blocks
TX_TOPIC=ippan-transactions

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Development/Testing
DEV_MODE=false
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
ENABLE_TLS=false
TLS_CERT_PATH=
TLS_KEY_PATH=

# Performance
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT_MS=30000
REQUEST_TIMEOUT_MS=10000
