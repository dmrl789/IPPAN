{
  "network": {
    "listen_addr": "/ip4/0.0.0.0/tcp/8080",
    "bootstrap_nodes": [],
    "max_connections": 50,
    "connection_timeout": 30,
    "enable_nat": true,
    "enable_relay": false
  },
  "storage": {
    "db_path": "/data/ippan.db",
    "max_storage_size": 1073741824,
    "shard_size": 1048576,
    "replication_factor": 3,
    "enable_encryption": true,
    "proof_interval": 300
  },
  "consensus": {
    "block_time": 1,
    "max_block_size": 1048576,
    "consensus_type": "BFT",
    "validator_count": 21,
    "validators_per_round": 21,
    "hashtimer_precision": 100,
    "time_sync_interval": 60,
    "round_timeout": 30,
    "finality_threshold": 14,
    "enable_zk_proofs": true
  },
  "dht": {
    "bucket_size": 20,
    "replication_factor": 3,
    "lookup_timeout": 30,
    "enable_caching": true
  },
  "api": {
    "listen_addr": "0.0.0.0:3000",
    "enable_cors": true,
    "rate_limit": 1000,
    "enable_auth": false
  },
  "staking": {
    "min_stake_amount": 10000000000,
    "max_stake_amount": 100000000000,
    "stake_lock_period": 1000,
    "slashing_conditions": {
      "downtime_threshold": 100,
      "downtime_slash_percent": 5,
      "malicious_slash_percent": 50,
      "fake_proof_slash_percent": 25
    }
  },
  "wallet": {
    "key_type": "ed25519",
    "key_rotation_interval": 2592000,
    "enable_hardware_wallet": false,
    "backup_interval": 86400
  },
  "performance": {
    "max_tps": 10000000,
    "batch_size": 1000,
    "cache_size": 536870912,
    "enable_parallel_processing": true,
    "worker_threads": 8
  },
  "security": {
    "enable_quantum_resistance": true,
    "enable_network_encryption": true,
    "certificate_path": "/keys/cert.pem",
    "private_key_path": "/keys/private.pem",
    "enable_audit_logging": true
  },
  "logging": {
    "level": "info",
    "enable_console": true,
    "log_file": "/logs/ippan.log",
    "max_log_size": 104857600,
    "log_rotation": true
  }
}