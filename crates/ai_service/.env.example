# AI Service Environment Configuration Example
# Copy this file to .env and fill in your specific values
# DO NOT commit .env to version control!

# ============================================================================
# Environment
# ============================================================================

# Set to: development, staging, production, or testing
IPPAN_ENV=development
ENVIRONMENT=development

# ============================================================================
# AI Core Configuration
# ============================================================================

# Health Monitoring
AI_CORE_HEALTH_ENABLED=true
AI_CORE_HEALTH_MEMORY_THRESHOLD=1073741824  # 1GB in bytes

# Execution Limits
AI_CORE_EXECUTION_MAX_TIME=30  # seconds
AI_CORE_EXECUTION_MAX_MEMORY=104857600  # 100MB in bytes

# Logging
AI_CORE_LOG_LEVEL=info
AI_CORE_LOG_FILE=  # Leave empty for stdout, or specify path like /var/log/ai-core.log

# Security
AI_CORE_SECURITY_RATE_LIMIT=1000  # requests per second

# Performance
AI_CORE_PERFORMANCE_METRICS=true

# ============================================================================
# LLM Service Configuration
# ============================================================================

# Enable/Disable LLM Features
ENABLE_LLM=false  # Set to true to enable, requires LLM_API_KEY

# LLM API Configuration (Required if ENABLE_LLM=true)
LLM_API_ENDPOINT=https://api.openai.com/v1
LLM_API_KEY=your-api-key-here  # REQUIRED: Replace with actual API key
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=30  # seconds

# ============================================================================
# Analytics Configuration
# ============================================================================

# Enable/Disable Analytics
ENABLE_ANALYTICS=true

# Analytics Settings
ANALYTICS_REALTIME=true
ANALYTICS_RETENTION_DAYS=30
ANALYTICS_INTERVAL=60  # seconds
ANALYTICS_PREDICTIVE=true

# ============================================================================
# Service Features
# ============================================================================

# Enable/Disable Smart Contracts
ENABLE_SMART_CONTRACTS=true

# Enable/Disable Monitoring
ENABLE_MONITORING=true

# ============================================================================
# Secrets (Secure Configuration)
# ============================================================================

# Secrets are loaded with IPPAN_SECRET_ prefix
# They will be automatically stripped to lowercase keys
# Example: IPPAN_SECRET_API_KEY becomes "api_key" internally

# API Keys
# IPPAN_SECRET_API_KEY=your-secret-api-key

# Database Credentials (if needed)
# IPPAN_SECRET_DB_PASSWORD=your-db-password
# IPPAN_SECRET_DB_USERNAME=your-db-username

# External Service Keys
# IPPAN_SECRET_EXTERNAL_SERVICE_KEY=your-external-key

# ============================================================================
# Advanced Configuration
# ============================================================================

# Log Configuration
LOG_LEVEL=info
LOG_FORMAT=pretty  # pretty or json
LOG_OUTPUT=stdout  # stdout or file path

# Security
ENABLE_ENCRYPTION=false
ENABLE_AUTHENTICATION=false
SESSION_TIMEOUT=3600  # seconds

# ============================================================================
# Notes
# ============================================================================

# 1. For production environments, ensure all secrets are properly set
# 2. Use environment-specific config files in config/ directory
# 3. LLM_API_KEY is REQUIRED if ENABLE_LLM=true
# 4. Never commit this file with real secrets to version control
# 5. Consider using a secrets manager (Vault, AWS Secrets Manager, etc.)
