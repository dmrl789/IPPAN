# Production secrets for IPPAN AI Service
# Copy this file to production.env and fill in the actual values

# LLM API Configuration
LLM_API_KEY=your-openai-api-key-here
LLM_API_ENDPOINT=https://api.openai.com/v1
LLM_MODEL=gpt-4

# Database Configuration (if applicable)
DATABASE_URL=postgresql://user:password@localhost:5432/ippan_ai
REDIS_URL=redis://localhost:6379

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://prometheus:9090/api/v1/write
GRAFANA_PASSWORD=your-grafana-password

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# External Services
BLOCKCHAIN_RPC_URL=https://your-blockchain-rpc-url
BLOCKCHAIN_API_KEY=your-blockchain-api-key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=3600

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3