PROMETHEUS_ENABLED=true
# IPPAN Root Environment Configuration Example
# Copy this file to .env and fill in your specific values
# DO NOT commit .env to version control!

# ============================================================================
# Deployment Configuration
# ============================================================================

# Network Configuration
NETWORK_NAME="IPPAN Production"
CHAIN_ID=ippan-mainnet

# Service Ports
UI_PORT=3001
RPC_PORT=8080
P2P_PORT=4001
GATEWAY_PORT=8081

# Node Hosts (for multi-server deployments)
NODE_1_HOST=188.245.97.41
NODE_2_HOST=135.181.145.174

# Docker Image Tags (optional - defaults to latest)
IPPAN_UI_TAG=latest
IPPAN_NODE_TAG=latest
IPPAN_GATEWAY_TAG=latest
IMAGE_TAG=latest

# Application Directory
DEPLOY_APP_DIR=/opt/ippan

# ============================================================================
# SSL/TLS Configuration (optional)
# ============================================================================

SSL_CERT_PATH=/etc/ssl/certs/ssl-cert-snakeoil.pem
SSL_KEY_PATH=/etc/ssl/private/ssl-cert-snakeoil.key

# ============================================================================
# Environment
# ============================================================================

# Set to: development, staging, or production
IPPAN_ENV=development
ENVIRONMENT=development
NODE_ENV=development
